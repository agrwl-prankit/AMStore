<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/mainLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".GeneratePdfActivity">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/icon"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:fontFamily="sans-serif"
        android:text="AGARWAL MEDICAL STORE"
        android:textColor="@color/purple_700"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/t2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="70dp"
        android:layout_below="@id/t1"
        android:background="@color/teal_700"
        android:padding="5dp"
        android:text="Supply of Medical Care"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/t3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/t2"
        android:layout_margin="5dp"
        android:textColor="@color/black"
        android:text="Main market,"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/t4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/t3"
        android:layout_margin="5dp"
        android:textColor="@color/black"
        android:text="Ganjdundwara"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/t5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/t4"
        android:layout_margin="5dp"
        android:text="Kasganj-207242"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/t6"
        android:layout_below="@id/t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:gravity="end"
        android:text="Tel: 7830997170"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/t7"
        android:layout_below="@id/t6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:gravity="end"
        android:text="Web: amstore.com"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/t8"
        android:layout_below="@id/t7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:gravity="end"
        android:text="Email:info@amstore.com"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <View
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/t5"
        android:background="@color/black" />

    <TextView
        android:id="@+id/t9"
        android:layout_below="@id/v1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="GSTIN :"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/t10"
        android:layout_below="@id/v1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24HDE7487RE5TR4"
        android:layout_toRightOf="@id/t9"
        android:layout_margin="5dp"
        android:textSize="15dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/t11"
        android:layout_below="@id/v1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ORIGINAL FOR RECIPIENT"
        android:layout_alignParentRight="true"
        android:layout_margin="6dp"
        android:textSize="13dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <View
        android:id="@+id/v2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/t10"
        android:background="@color/black" />

</RelativeLayout>